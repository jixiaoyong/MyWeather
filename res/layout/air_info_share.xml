<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:id="@+id/title_air_info_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">"
             
        <ImageButton 
            android:id="@+id/back_air_info_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:layout_marginTop="3dip"
            android:src="@drawable/back"/>
        
        <TextView
            android:id="@+id/title_text_air_info_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dip"
            android:layout_toRightOf="@id/back_air_info_share"
            android:text="@string/title_text_air_info_share" />
        
        <ImageButton
            android:id="@+id/share_air_info_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:layout_marginTop="3dip"
            android:background="#0000"
            android:src="@drawable/share"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dip"
            android:layout_toLeftOf="@id/share_air_info_share"
            android:text="@string/share"/>
        
    </RelativeLayout>
    
    <View
        android:layout_width="280dip"
        android:layout_height="1dip"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        android:background="#0000" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        
        <EditText
            android:id="@+id/text_air_info_share"
            android:layout_width="280dip"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:text="@string/text_air_info_share"/>
        
        <View
            android:layout_width="280dip"
            android:layout_height="1dip"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="2dip"
            android:background="#C0BAB6" />
        
        <ImageView
            android:layout_width="280dip"
            android:layout_height="300dip"
            android:layout_weight="2"
            android:src="@drawable/back"/>
    </LinearLayout>    
    

</LinearLayout>
